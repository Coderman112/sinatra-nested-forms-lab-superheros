<!DOCTYPE html>
<html>
    <div class="team">
        <h1><%= @team.name %></h1><br>
        <h2>Team Motto: <%= @team.motto %></h2>
    </div><br>



    <% @heroes.each.with_index do |hero, index| %>
        <div class="hero">
            <% if index == 0 %>
                <h2>Hero Name: <%= hero.name%></h2><br>
                <p>Hero Power: <%= hero.power %></p>
                <p>Hero Biography: <%= hero.biography %></p>
            <% end %>
        <% end %>
    </div><br>


    <% @heroes.each.with_index do |hero, index| %>
        <div class="hero">
            <% if index == 1 %>
                <h2>Hero Name: <%= hero.name%></h2><br>
                <p>Hero Power: <%= hero.power %></p>
                <p>Hero Biography: <%= hero.biography %></p>
            <% end %>
        <% end %>
    </div><br>

    <% @heroes.each.with_index do |hero, index| %>
        <div class="hero">
            <% if index == 2 %>
                <h2>Hero Name: <%= hero.name%></h2><br>
                <p>Hero Power: <%= hero.power %></p>
                <p>Hero Biography: <%= hero.biography %></p>
            <% end %>
        <% end %>
    </div><br>
</html>


